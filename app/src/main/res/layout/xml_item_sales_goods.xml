<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_goods"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_home_banner" />

        <TextView
            android:id="@+id/tv_goods_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/image_goods"
            android:layout_toRightOf="@+id/image_goods"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="1"
            android:text="特惠秒杀"
            android:textColor="@color/text_black"
            android:textSize="@dimen/textsize_7" />

        <TextView
            android:id="@+id/tv_goods_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_goods_title"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/image_goods"
            android:background="@drawable/x_edt_bg_rootcolor07"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="2"
            android:text="特惠秒杀"
            android:textColor="#FF7E00"
            android:textSize="@dimen/textsize_5" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/image_goods"
            android:layout_toRightOf="@+id/image_goods"
            android:gravity="bottom"
            android:paddingTop="5dp"
            android:text="¥999"
            android:textColor="@color/red"
            android:textSize="@dimen/textsize_7" />

        <TextView
            android:id="@+id/tv_123"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/image_goods"
            android:layout_toRightOf="@+id/tv_money"
            android:gravity="bottom"
            android:paddingTop="5dp"
            android:text="起"
            android:textColor="@color/text_black"
            android:textSize="@dimen/textsize_6" />


        <TextView
            android:id="@+id/tv_count_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/image_goods"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/tv_123"
            android:gravity="bottom"
            android:paddingTop="5dp"
            android:text="剩余"
            android:textColor="@color/text_black"
            android:textSize="@dimen/textsize_7" />

        <TextView
            android:id="@+id/tv_cunt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/image_goods"
            android:layout_toRightOf="@+id/tv_count_a"
            android:gravity="bottom"
            android:paddingTop="5dp"
            android:text="0"
            android:textColor="@color/red"
            android:textSize="@dimen/textsize_7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/image_goods"
            android:layout_toRightOf="@+id/tv_cunt"
            android:gravity="bottom"
            android:paddingTop="5dp"
            android:text="件"
            android:textColor="@color/text_black"
            android:textSize="@dimen/textsize_7" />
    </RelativeLayout>

</LinearLayout>