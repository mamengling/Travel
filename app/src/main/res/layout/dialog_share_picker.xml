<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/weiixin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/icon_share_wx"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="微信"
            android:textColor="@color/text_black"
            android:textSize="@dimen/textsize_6" />

        <TextView
            android:id="@+id/pyq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/icon_share_firend"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:textColor="@color/text_black"
            android:text="朋友圈"
            android:textSize="@dimen/textsize_6" />

        <TextView
            android:id="@+id/qq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/icon_share_qq"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="QQ"
            android:textColor="@color/text_black"
            android:textSize="@dimen/textsize_6" />

        <TextView
            android:id="@+id/kongjian"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textColor="@color/text_black"
            android:drawableTop="@mipmap/icon_share_zone"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="空间"
            android:textSize="@dimen/textsize_6" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/root_bg_color" />

    <TextView
        android:id="@+id/cancle"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/text_black"
        android:textSize="@dimen/textsize_6" />
</LinearLayout>