<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/image_goods_visa"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_home_banne01" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/image_goods_visa"
        android:layout_alignRight="@+id/image_goods_visa"
        android:layout_alignBottom="@+id/image_goods_visa"
        android:layout_marginBottom="5dp"
        android:ellipsize="end"
        android:lines="1"
        android:text="加急...."
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_6" />


    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_goods_visa"
        android:layout_centerHorizontal="true"
        android:gravity="bottom"
        android:text="¥258"
        android:textColor="@color/red_money"
        android:textSize="@dimen/textsize_6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_goods_visa"
        android:layout_alignBottom="@+id/tv_money"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/tv_money"
        android:text="起"
        android:textColor="@color/text_black"
        android:textSize="@dimen/textsize_7" />
</RelativeLayout>