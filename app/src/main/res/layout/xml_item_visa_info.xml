<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_goods"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_home_banner"/>

        <TextView
            android:id="@+id/tv_goods_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/image_goods"
            android:layout_toRightOf="@+id/image_goods"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="2"
            android:text="特惠秒杀"
            android:textColor="@color/text_black"
            android:textSize="@dimen/textsize_7"/>

        <TextView
            android:id="@+id/tv_goods_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_goods_title"
            android:layout_toRightOf="@+id/image_goods"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="2"
            android:text="15天"
            android:textColor="@color/text_black"
            android:textSize="@dimen/textsize_5"/>

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/image_goods"
            android:layout_toRightOf="@+id/image_goods"
            android:gravity="bottom"
            android:paddingTop="5dp"
            android:text="¥999"
            android:textColor="@color/red"
            android:textSize="@dimen/textsize_6"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/image_goods"
            android:layout_toRightOf="@+id/tv_money"
            android:gravity="bottom"
            android:paddingTop="5dp"
            android:text="起"
            android:textColor="@color/text_black"
            android:textSize="@dimen/textsize_5"/>

        <TextView
            android:id="@+id/tv_persone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_money"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="已办理10000人"
            android:textColor="@color/text_black"
            android:textSize="@dimen/textsize_5"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/root_bg_color1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="办理时间"
                android:textColor="@color/text_black"
                android:textSize="@dimen/textsize_6"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-04-08"
                android:textColor="@color/text_black"
                android:textSize="@dimen/textsize_5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="是否面试"
                android:textColor="@color/text_black"
                android:textSize="@dimen/textsize_6"/>

            <TextView
                android:id="@+id/tv_faces"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="不需要面试"
                android:textColor="@color/text_black"
                android:textSize="@dimen/textsize_5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="入境次数"
                android:textColor="@color/text_black"
                android:textSize="@dimen/textsize_6"/>

            <TextView
                android:id="@+id/tv_entry_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1次"
                android:textColor="@color/text_black"
                android:textSize="@dimen/textsize_5"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="常用送签地"
                android:textColor="@color/text_black"
                android:textSize="@dimen/textsize_6"/>

            <TextView
                android:id="@+id/tv_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京"
                android:textColor="@color/text_black"
                android:textSize="@dimen/textsize_5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="签证有效期"
                android:textColor="@color/text_black"
                android:textSize="@dimen/textsize_6"/>

            <TextView
                android:id="@+id/tv_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="90天"
                android:textColor="@color/text_black"
                android:textSize="@dimen/textsize_5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="停留时间"
                android:textColor="@color/text_black"
                android:textSize="@dimen/textsize_6"/>

            <TextView
                android:id="@+id/tv_stay_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30天"
                android:textColor="@color/text_black"
                android:textSize="@dimen/textsize_5"/>
        </LinearLayout>

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="受理范围"
        android:textColor="@color/text_black"
        android:textSize="@dimen/textsize_6"/>

    <com.jcool.dev.travel.view.FixedGridView
        android:id="@+id/fixedGridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#eeeeee"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <RadioButton
            android:id="@+id/radiobutton0"
            style="@style/tab_line_style_new"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:checked="true"
            android:text="所需材料"/>

        <RadioButton
            android:id="@+id/radiobutton1"
            style="@style/tab_line_style_new"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="产品说明"/>

        <RadioButton
            android:id="@+id/radiobutton2"
            style="@style/tab_line_style_new"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="购买须知"/>

        <RadioButton
            android:id="@+id/radiobutton3"
            style="@style/tab_line_style_new"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:text="产品详情"/>
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="在职人员"
                android:textColor="@color/text_black"
                android:textSize="@dimen/textsize_6"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/icon_right_arrow"
                android:gravity="end"
                android:text="共需0项材料"
                android:textColor="@color/text_black"
                android:textSize="@dimen/textsize_6"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自由职业"
                android:textColor="@color/text_black"
                android:textSize="@dimen/textsize_6"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/icon_right_arrow"
                android:gravity="end"
                android:text="共需0项材料"
                android:textColor="@color/text_black"
                android:textSize="@dimen/textsize_6"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="在校学生"
                android:textColor="@color/text_black"
                android:textSize="@dimen/textsize_6"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/icon_right_arrow"
                android:gravity="end"
                android:text="共需0项材料"
                android:textColor="@color/text_black"
                android:textSize="@dimen/textsize_6"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退休"
                android:textColor="@color/text_black"
                android:textSize="@dimen/textsize_6"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/icon_right_arrow"
                android:gravity="end"
                android:text="共需0项材料"
                android:textColor="@color/text_black"
                android:textSize="@dimen/textsize_6"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学龄前儿童"
                android:textColor="@color/text_black"
                android:textSize="@dimen/textsize_6"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/icon_right_arrow"
                android:gravity="end"
                android:text="共需0项材料"
                android:textColor="@color/text_black"
                android:textSize="@dimen/textsize_6"/>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>